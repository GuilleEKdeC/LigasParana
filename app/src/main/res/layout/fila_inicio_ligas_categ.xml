<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground2"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:weightSum="1"
    tools:ignore="RtlHardcoded"
    tools:text="Texto de Prueba en el Item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:orientation="horizontal"
        android:weightSum="1">

        <!--.....Nombre de la Liga/Categoría.....-->
        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:backgroundTint="@color/colorPrimary"
            android:elevation="24dp"
            android:gravity="center"
            android:text="Liga de Veteranos "
            android:textAlignment="center"
            android:textColor="@color/texto1"
            android:textSize="18sp"
            android:textStyle="bold" /><!--

        <!-.....Logo de la Liga/Categoría......-->
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:adjustViewBounds="false"
            android:contentDescription=""
            android:padding="2dip"
            android:src="@drawable/mas34"
            android:textAlignment="gravity"
            android:visibility="visible"
            tools:layout_gravity="start" />

    </LinearLayout>
</LinearLayout>



