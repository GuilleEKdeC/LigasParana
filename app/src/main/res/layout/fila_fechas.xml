<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_fechas_equipoa"
        android:layout_width="157dp"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:gravity="center"
        android:text="Equipo A" />

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fechas_horario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Horario" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ib_fechas_iconomapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="false"
                android:background="@android:color/background_light"
                android:contextClickable="true"
                app:srcCompat="@drawable/iconomapas"
                tools:clickable="true" />

            <TextView
                android:id="@+id/tv_fechas_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cancha 7" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_fechas_equipob"
        android:layout_width="146dp"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:gravity="center"
        android:text="Equipo B" />

</LinearLayout>