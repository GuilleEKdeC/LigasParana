<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:padding="16dp"
    tools:context=".FragmentFechas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt_fecha_fecha1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA 1"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/windowBackground"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bt_fecha_fecha2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA 2"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/windowBackground"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bt_fecha_fecha3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA 3"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/windowBackground"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bt_fecha_fecha4"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA 4"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/windowBackground"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bt_fecha_fecha5"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA 5"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/windowBackground"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bt_fecha_fecha6"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA 6"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/windowBackground"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bt_fecha_fecha7"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA 7"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/windowBackground"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bt_fecha_fecha8"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA 8"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/windowBackground"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bt_fecha_fecha9"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA 9"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/windowBackground"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bt_fecha_fecha10"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA 10"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/windowBackground"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bt_fecha_fecha11"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA 11"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/windowBackground"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/bt_fecha_fecha12"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="FECHA 12"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/windowBackground"
                    android:textSize="10sp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fecha_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp" />

            <ListView
                android:id="@+id/lv_fechas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:elevation="24dp"
                android:paddingRight="2dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#691515"
                android:textStyle="bold|italic"
                android:typeface="serif"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>