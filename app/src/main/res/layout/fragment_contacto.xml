<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".FragmentContactos"
    android:background="?attr/colorControlHighlight">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:text="lavfp@yahoo.com.ar"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/textView9"
            android:layout_toEndOf="@+id/textView9"
            android:layout_below="@+id/textView4" />

        <Button
            android:text="Llamar "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLlamar"
            android:drawableRight="@drawable/telefono"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignRight="@+id/buttonEmail"
            android:layout_alignEnd="@+id/buttonEmail"
            android:visibility="visible" />

        <TextView
            android:text="    +    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignRight="@+id/textView12"
            android:layout_alignEnd="@+id/textView12"
            android:layout_marginRight="68dp"
            android:layout_marginEnd="68dp"
            android:id="@+id/textView10"
            android:layout_alignBottom="@+id/textView8" />

        <TextView
            android:text="0343-4973676"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="18sp"
            android:layout_toLeftOf="@+id/buttonLlamar"
            android:layout_marginRight="59dp"
            android:layout_marginEnd="59dp"
            android:layout_toRightOf="@+id/textView9"
            android:layout_toEndOf="@+id/textView9"
            android:layout_below="@+id/textView6" />

        <TextView
            android:text="    +    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_alignTop="@+id/textView5" />

        <TextView
            android:text="    +    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_alignTop="@+id/textView13" />

        <TextView
            android:text="Dirección:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:layout_below="@+id/buttonLlamar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Teléfono:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:layout_weight="0.04"
            android:layout_below="@+id/buttonEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Av. Jorge Newbery 5000 - Paraná - Entre Ríos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7"
            android:layout_below="@+id/textView12" />

        <Button
            android:text="Enviar "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEmail"
            android:drawableRight="@drawable/email"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Correo Electrónico:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
