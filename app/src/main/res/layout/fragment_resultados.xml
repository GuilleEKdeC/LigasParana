                android:id="@+id/bt_res_fecha2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="FECHA 2"
                android:textSize="8sp" />
            <Button
                android:id="@+id/bt_res_fecha3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="FECHA 3"
                android:textSize="8sp" />
            <Button
                android:id="@+id/bt_res_fecha4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="FECHA 4"
                android:textSize="8sp" />
            <Button
                android:id="@+id/bt_res_fecha5"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="FECHA 5"
                android:textSize="8sp" />
            <Button
                android:id="@+id/bt_res_fecha6"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="FECHA 6"
                android:textSize="8sp" />
            <Button
                android:id="@+id/bt_res_fecha7"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="FECHA 7"
                android:textSize="8sp" />
            <Button
                android:id="@+id/bt_res_fecha8"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="FECHA 8"
                android:textSize="8sp" />
            <Button
                android:id="@+id/bt_res_fecha9"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="FECHA 9"
                android:textSize="8sp" />
            <Button
                android:id="@+id/bt_res_fecha10"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="FECHA 10"
                android:textSize="8sp" />
            <Button
                android:id="@+id/bt_res_fecha11"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="FECHA 11"
                android:textSize="8sp" />
            <Button
                android:id="@+id/bt_res_fecha12"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="FECHA 12"
                android:textSize="8sp" />
        </LinearLayout>
    </ScrollView>

        <TextView
            android:id="@+id/tv_resultados_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center" />
        <ListView
            android:id="@+id/lv_resultados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#d3e8f2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#691515"
            android:textStyle="bold|italic"
            android:typeface="serif" />
    </LinearLayout>

</FrameLayout>